<!-- Home page -->

<!-- Modal -->
<% if !current_user %>
  <div class="modal fade" id="home-modal" tabindex="-1" role="dialog" aria-labelledby="home-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="home-modal-label">Welcome to ScatterBrain App</h4>
        </div>
        <div class="modal-body">
          Feel free to try the app before creating an account.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Try</button></a>
          <a href="login"><button type="button" class="btn btn-primary">Login</button></a>
          <a href="signup"><button type="button" class="btn btn-primary">Sign Up</button></a>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- List of Current Entries -->
<% if current_user %>
  <h2>List of Current Entries</h2>
  <% all_entries = Entry.all %>
  <ul>
  <% all_entries.each do |entry| %>
    <li><%= entry %></li>
  <% end %>
  </ul>
<% end %>

<div ng-app="scatterBrainApp">
  <div ng-view></div>
</div>
